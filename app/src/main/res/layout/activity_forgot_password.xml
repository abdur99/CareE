<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/greengeometric3"
    tools:context=".ForgotPasswordActivity">

    <ImageView
        android:layout_width="165dp"
        android:layout_height="165dp"
        android:src="@drawable/carelogo"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="80dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="260dp"
        android:fontFamily="@font/nexa_bold"
        android:text="Forgotten Password"
        android:textAlignment="center"
        android:textColor="#46BE28"
        android:textSize="30sp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/email"
        android:layout_width="300dp"
        android:layout_marginTop="300dp"
        android:layout_marginStart="62dp"
        android:layout_height="wrap_content"
        android:background="@android:drawable/editbox_background_normal"
        android:fontFamily="@font/nexa_light"
        android:hint="@string/email"
        android:inputType="textEmailAddress"
        />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="35dp"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="40dp"
        android:src="@drawable/emailicon"
        />


    <Button
        android:id="@+id/btn_submit"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="360dp"
        android:background="#30B135"
        android:layout_gravity="center_horizontal"
        android:text="@string/send_password_reset_email"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/loginbotton"
        android:layout_gravity="bottom"
        android:scaleType="fitXY"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="460dp"
        android:fontFamily="@font/nexa_light"
        android:text="Please enter your email to reset your password"
        android:textAlignment="center"
        android:textColor="#46BE28"
        android:textSize="20sp"
        android:textStyle="bold" />

</FrameLayout>

