<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TripRecord">

    <TextView
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/nexa_bold"
        android:text="Your Cost"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tripcost"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/nexa_bold"
        android:text="$4.98"
        android:textAlignment="center"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="30sp"
        android:textStyle="bold" />


    <TextView
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/nexa_bold"
        android:text="Carbon Footprint"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/carbonfootprint"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/nexa_bold"
        android:text="5 Tonne"
        android:textAlignment="center"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="30sp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:scaleType="fitXY"
        android:layout_marginTop="80dp"
        android:src="@drawable/bar"/>

    <EditText
        android:layout_marginTop="550dp"
        android:layout_marginLeft="40dp"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:id="@+id/searchloc"
        android:layout_weight="0.5"
        android:inputType="textPersonName"
        android:hint="Name this Trip" />

    <Button
        android:id="@+id/searchbtn"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginLeft="285dp"
        android:layout_marginTop="545dp"
        android:background="#2A8D05"
        android:fontFamily="@font/adamina"
        android:text="Save"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_marginTop="90dp"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:scaleType="fitXY"
        android:layout_marginTop="590dp"
        android:src="@drawable/bar"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="595dp"
        android:fontFamily="@font/nexa_bold"
        android:text="You Travelled"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="42sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/distance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="650dp"
        android:fontFamily="@font/nexa_bold"
        android:text="0 Meters"
        android:textAlignment="center"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="37sp"
        android:textStyle="bold" />


</FrameLayout>