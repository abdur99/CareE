<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".aboutus">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <TextView
        android:id="@+id/aboutcare"
        android:layout_width="199dp"
        android:layout_height="51dp"
        android:text="About Car-E"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/detailinfo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/detailinfo"
        android:layout_width="409dp"
        android:layout_height="451dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/aboutteam"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/aboutteam"
        android:layout_width="338dp"
        android:layout_height="57dp"
        android:layout_marginBottom="172dp"
        android:text="Team Three Errors"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.589"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/photo"
        android:layout_width="156dp"
        android:layout_height="136dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/accord"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/aboutteam" />

    <TextView
        android:id="@+id/name"
        android:layout_width="225dp"
        android:layout_height="60dp"
        android:layout_marginTop="60dp"
        android:text="Faaiz Masood"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/photo"
        app:layout_constraintTop_toBottomOf="@+id/aboutteam"
        app:layout_constraintVertical_bias="0.0" />
</LinearLayout>
</ScrollView>