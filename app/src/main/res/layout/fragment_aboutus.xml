<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/greenbackwithdots"
    tools:context=".aboutus">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/aboutcare"
            android:layout_width="258dp"
            android:layout_height="48dp"
            android:fontFamily="@font/font_nexa"
            android:text="About The App"
            android:textColor="#FFFFFF"
            android:textSize="36sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/detailinfo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="208dp"
            android:layout_height="164dp"
            android:src="@drawable/faaizphoto"
            app:layout_constraintEnd_toEndOf="@+id/faaiz"
            app:layout_constraintHorizontal_bias="0.026"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/aboutteam" />

        <TextView
            android:id="@+id/detailinfo"
            android:layout_width="401dp"
            android:layout_height="556dp"
            android:layout_marginTop="48dp"
            android:fontFamily="@font/nexa_light"
            android:text='Today, as we are on the cusp of seeing first-hand the effects of climate change, there is a public desire to reduce their footprint on the earth."CAR-E" connects people and their GPS, tracks their mileage and demonstrates the savings provided by E-Vehicles.'
            android:textColor="#F1E9E9"
            android:textSize="38dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/aboutteam"
            android:layout_width="282dp"
            android:layout_height="51dp"
            android:fontFamily="@font/nexa_bold"
            android:text="Meet The Team"
            android:textColor="#FFFFFF"
            android:textSize="36sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detailinfo" />

        <TextView
            android:id="@+id/faaiz"
            android:layout_width="182dp"
            android:layout_height="59dp"
            android:layout_marginTop="76dp"
            android:text="Faaiz Masood"
            android:fontFamily="@font/font_nexa"
            android:textColor="#F5E7E7"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.972"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/aboutteam" />

        <TextView
            android:id="@+id/faaiz2"
            android:layout_width="182dp"
            android:layout_height="59dp"
            android:layout_marginTop="104dp"
            android:text="Rayyan Abid"
            android:fontFamily="@font/font_nexa"
            android:textSize="24sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.972"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/faaiz" />

        <TextView
            android:id="@+id/faaiz3"
            android:layout_width="182dp"
            android:layout_height="59dp"
            android:layout_marginTop="108dp"
            android:text="Abdur Rahman"
            android:textSize="24sp"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/font_nexa"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.972"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/faaiz2" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="208dp"
            android:layout_height="164dp"
            android:src="@drawable/rayyanphoto"
            app:layout_constraintEnd_toEndOf="@+id/faaiz"
            app:layout_constraintHorizontal_bias="0.026"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView3" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="208dp"
            android:layout_height="164dp"
            android:src="@drawable/abdurrrrrr"
            app:layout_constraintEnd_toEndOf="@+id/faaiz"
            app:layout_constraintHorizontal_bias="0.025"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView4" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>